# OpenRouter API (LLM provider)
OPENROUTER_API_KEY=your_openrouter_key_here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# News API (Primary)
NEWS_API_KEY=your_newsapi_key_here

# Additional News Sources (Optional - for fallback when NewsAPI is rate limited)
# Get free keys from:
# - Finnhub: https://finnhub.io/register (60 calls/min free)
# - Alpha Vantage: https://www.alphavantage.co/support/#api-key (500 calls/day free)
# - MediaStack: https://mediastack.com/signup/free (500 calls/month free)
FINNHUB_API_KEY=
ALPHAVANTAGE_API_KEY=
MEDIASTACK_API_KEY=

# System Configuration
LOG_LEVEL=info
REFRESH_INTERVAL=30

# Model Selection
LLM_MODEL=anthropic/claude-3.5-sonnet

# Embeddings (runs LOCALLY via sentence-transformers, no API key needed)
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# SEC EDGAR Configuration (for insider trading data)
SEC_USER_AGENT=AlphaStream support@alphastream.ai
SEC_RATE_LIMIT=10